@model shareyourstory.net.Models.LocalPasswordModel

@using (Html.BeginForm("Manage", "Account")) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()
    
    <div class="formItem">
        <div class="formLabel">@Html.LabelFor(m => m.OldPassword)</div>
        <div class="formInput">@Html.PasswordFor(m => m.OldPassword)</div>
        <div class="clear"></div>
    </div>        
    <div class="formItem">
        <div class="formLabel">@Html.LabelFor(m => m.NewPassword)</div>
        <div class="formInput">@Html.PasswordFor(m => m.NewPassword)</div>
        <div class="clear"></div>
    </div>        
    <div class="formItem">
        <div class="formLabel">@Html.LabelFor(m => m.ConfirmPassword)</div>
        <div class="formInput">@Html.PasswordFor(m => m.ConfirmPassword)</div>
        <div class="clear"></div>
    </div>        
    <div class="formBottom">
        <input type="submit" value="Change password" />
    </div>
}
