@model shareurstorydb.RegisterExternalLoginModel
@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("ExternalLoginConfirmation", "Account", new { ReturnUrl = ViewBag.ReturnUrl })) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)
    <div class="containerBig" style="margin-top:0;">
        <div class="containerInner">
            </div>
            <div class="containerTitle">
                <div class="containerTitleText">Registration Form</div>
            <div style="clear:both;"></div>
            <div class="containerStory">
                <p>
                    You've successfully authenticated with <strong>@ViewBag.ProviderDisplayName</strong>.
                    Please enter a user name for this site below and click the Confirm button to finish
                    logging in.<br /><br />
                </p>
                <div class="formItem">
                    <div class="formLabel">@Html.LabelFor(m => m.UserName)</div>
                    <div class="formInput2">@Html.TextBoxFor(m => m.UserName) @Html.ValidationMessageFor(m => m.UserName)</div>
                    <div class="clear"></div>
                </div>        
                <div class="formItem">
                    <div class="formLabel">@Html.LabelFor(m => m.FullName)</div>
                    <div class="formInput2">@Html.TextBoxFor(m => m.FullName)</div>
                    <div class="clear"></div>
                </div>        
                <div class="formItem">
                    <div class="formLabel">@Html.LabelFor(m => m.Link)</div>
                    <div class="formInput2">@Html.TextBoxFor(m => m.Link)</div>
                    <div class="clear"></div>
                </div>        
                <div class="formBottom">
                    @Html.HiddenFor(m => m.ExternalLoginData)
                    <input type="submit" value="Register" />
                </div>        
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}