@model shareurstorydb.LocalPasswordModel

@{
    ViewBag.Title = "Manage Account";
}

@if (ViewBag.IsActive == false)
{ 
    <script>alert('Your account is inactive.');</script>
}

<p class="message-success">@ViewBag.StatusMessage</p>

<div class="containerSmall" style="margin-top:0;">
    <div class="containerInner">
        <div class="containerTitle">
            <div class="containerTitleText">My Account</div>
        </div>
        <div style="clear:both;"></div>
        <div class="containerStorySmall">
            @Html.Partial("_UserProfilePartial")
        </div>
        <div class="containerTitle">
            <div class="containerTitleText">Change Password</div>
        </div>
        <div style="clear:both;"></div>
        <div class="containerStorySmall">
            @if (ViewBag.HasLocalPassword)
            {
                @Html.Partial("_ChangePasswordPartial")
            }
            else
            { 
                @Html.Partial("_SetPasswordPartial")
            } 
        </div>
    </div>
</div>

<div class="containerSeparater">&nbsp;</div>
<div class="containerSmall" style="margin-top:0;">
    <div class="containerInner">
        <div class="containerTitle">
            <div class="containerTitleText">External Logins</div>
        </div>
        <div style="clear:both;"></div>
        <div class="containerStorySmall">
            @Html.Action("RemoveExternalLogins")
            @Html.Action("ExternalLoginsList", new { ReturnUrl = ViewBag.ReturnUrl })        
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}